@{
    Page.Title = "My Games";
    IEnumerable<dynamic> games = new object[] {
        new { Name = "AmpxDnD", Id = 42 },
        new { Name = "BelltownDnD", Id = 24 }
    };
}
<h2>My Games</h2>
<ul id="gameslist">
    @foreach(var game in games) {
        <li><a href="~/Games/Detail/@game.Id" title="@game.Name">@game.Name</a></li>
    }
</ul>
<a href="~/Games/New" title="Start a new game">Start a new game!</a>